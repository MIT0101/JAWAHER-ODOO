<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Extend ProductScreen template -->
    <t t-name="InheritProductScreen" t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension" owl="1">

        <xpath expr="//ProductCard" position="attributes">
            <!-- Pass the new salePrice prop -->
            <attribute name="salePrice">product.lst_price</attribute>
            <!-- Pass the new Barcode prop -->
            <attribute name="barcodeText">product.barcode</attribute>
        </xpath>
    </t>
</odoo>